    "coverage": "jest --coverage",
    "watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "gitleaks": "gitleaks detect --source . --report-format json --report-path gitleaks-report.json",
    "prepare": "husky"
