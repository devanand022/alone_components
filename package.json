    "types": "./dist/types/index.d.ts",
    "umd": "./dist/umd/index.umd.js",
    "import": "./dist/mjs/index.mjs",
    "require": "./dist/cjs/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:types": "tsc",
    "build:js": "rimraf dist && webpack --mode production",
    "build:sass": "webpack --config webpack.sass.js",
